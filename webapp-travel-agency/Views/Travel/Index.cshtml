@model IEnumerable<Travel>
@{
    int count = 0;
}
<div class="title">
    <h1>Our Amazing Tours</h1>
</div>

<div class="create">
    <a class="btn btn-primary" href="@Url.Action("Create", "Travel")">Crea un nuovo viaggio</a>
</div>

<div class="travel-section">

    @foreach (Travel travel in Model)
    {
        <div class="travelCard">
            <span class="invisible">@count</span>
            <div class="travelPhoto">
                <img src="@travel.Photo">
            </div>
            <h2>@travel.Name</h2>
            <p>@travel.Description</p>
            <p>Giorni totali del viaggio: @travel.Day</p>
            <p>Destinazioni del viaggio: @travel.Destination</p>
            <p>Prezzo: @travel.Price €</p>
            <div class="inline">
                <a class="btn btn-info" href="@Url.Action("Detail", "Travel", new {id = travel.Id})">Dettaglio</a>
            </div>
            <div class="inline">
                <a class="btn btn-warning" href="@Url.Action("Update", "Travel", new {id = travel.Id})">Modifica</a>
            </div>
            <div class="inline">
                <form asp-controller="Travel" asp-action="Delete" asp-route-id="@travel.Id" method="post">
                   <button class="btn btn-danger">Elimina</button>
                </form>
            </div>
        </div>
    }

</div>
